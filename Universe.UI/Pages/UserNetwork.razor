@page "/usernetwork"
@inject HttpClient Http

<h3>UserNetwork</h3>

@if (Response == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>EMAIL</th>
                <th>PASSWORD</th>
                <th>REGISTER DATE</th>
                <th>UPDATE DATE</th>
                <th>IS ACTIVE</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Administrator in Response.ResponseCollection)
            {
                <tr>
                    <td>@Administrator.Id</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><NavLink href="administrator/update">Düzenle</NavLink></td>
                    <td><NavLink href="administrator/delete">Sil</NavLink></td>
                </tr>
            }
        </tbody>
    </table>
}

@code
{
    private UserNetworkResponse? Response;
    protected override async Task OnInitializedAsync()
    {
        Response = await Http.GetFromJsonAsync<UserNetworkResponse>("https://localhost:7255/api/usernetwork");
    }
}