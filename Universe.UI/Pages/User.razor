@page "/user"
@inject HttpClient Http

<NavLink href="user/create">Ekle</NavLink>

@if (Response == null)
{
     <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>EMAIL</th>
                <th>PASSWORD</th>
                <th>REGISTER DATE</th>
                <th>UPDATE DATE</th>
                <th>IS ACTIVE</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Administrator in Response.ResponseCollection)
            {
                <tr>
                    <td>@Administrator.Email</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><NavLink href="administrator/update">Düzenle</NavLink></td>
                    <td><NavLink href="administrator/delete">Sil</NavLink></td>
                </tr>
            }
        </tbody>
    </table>
}

@code
{
    private UserResponse? Response;
    protected override async Task OnInitializedAsync()
    {
        Response = await Http.GetFromJsonAsync<UserResponse>("http://192.168.1.100/api/administrator?id=2&option=5");
    }
}